/* Borders */
.rounded 
  border-radius 15px

.border
  border 2px solid black
  
.shadow
  box-shadow: 10px 10px 5px #888888
  
.padded
  padding: 5px
  
/* Colors */
  
.purple
  color: purple
  
.background-blue
  background-color: #4D4271

.pink
  color: pink

.background-green
  background-color: #3B6752
  
.background-grey
  background-color: #3F3C42
  
.background-mountains
  background: url('/img/mountains.jpg')
  background-size: cover

.orange
  color: orange
  
.background-orange
  background-color: orange
  
.background-white
  background-color: white
  
/* Fonts */
  
.times-font
  font-family: "Times New Roman", Georgia, Serif
  
.comic-font
  font-family: "Comic Sans MS", cursive, sans-serif

.courier-font
  font-family: "Courier New", Courier, monospace