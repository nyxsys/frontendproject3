
.invert
  color : inherit
  filter: invert(100%)


/* Borders */
.rounded 
  border-radius 15px

.thick-border
  border 5px solid 
  border-color inherit

.border
  border 2px solid black
  
.shadow
  box-shadow: 3px 3px 2px #888888
  
.noshadow
  box-shadow: none

.dotted-border
  border 5px dotted
  border-color inherit

.padded
  padding: 5px
  
/* Text Colors */
  
