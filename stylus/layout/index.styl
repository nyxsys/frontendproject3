//Add layout rules here
@import 'nib';

.page-wrapper
  margin-top: 2%
  margin-left: 8%
  margin-right: 8%
  margin-bottom: 2%
  padding-left: 2%
  padding-right: 2%
  clearfix()

//Mixins
indent(n)
  margin-left: n

//Classes
.text-center
  text-align: center

.margin-center
  margin-left: auto
  margin-right: auto

.relative
  display relative
  
.column
  display: block
  float: left
  position: relative
  
.column-1-2
  @extend .column
  width: 48%
  padding-right: 1%
  padding-left: 1%

.column-2-2
  @extend .column
  width: 48%
  padding-right: 1%
  padding-left: 1%

.column-1-1
  @extend .column
  width: 98%
  padding-left: 1%
  padding-right: 1%